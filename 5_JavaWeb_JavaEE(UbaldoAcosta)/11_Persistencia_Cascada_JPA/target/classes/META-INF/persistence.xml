<?xml version="1.0" encoding="UTF-8"?>
<!-- Esta es la configuracion de JPA-->
<persistence version="2.2" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence                                                           http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
  <!-- Para agregar la unidad de persistencia en JPA-->
  <persistence-unit name="PersonaPu" transaction-type="RESOURCE_LOCAL">
    <!-- Agregamos las clases de la Entidad en este caso Persona-->
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!-- Agregamos las propiedades de la base de datos -->
    <class>dominio.Persona</class>
    <class>dominio.Usuario</class>
    <properties>
      <property name="javax.persistence.jdbc.url " value="jdbc:mysql://localhost:3306/test_jpa?useSSL=false&amp;useTimezone=true&amp;serverTimezone=UTC"/>
      <!-- Para que se agruege el detalle de cualquier consulta hacia la base de datos -->
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/test_jpa?useSSL=false&amp;useTimezone=true&amp;serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="danay hija"/>
    </properties>
  </persistence-unit>
</persistence>
